    <table>
        <th></th>
        <th>Opis</th>
        <th>Kategoria</th>
        <th>Koszt</th>
        <th>Data</th>
        <th>Z konta</th>
            {% for expend in expends %}
            <tr>
                <td>
                    <a href="{{ path('submit_deleteEx', {"id" : expend.id}) }}">usuń</a>
                    <a href="{{ path('modify_expend', {"id" : expend.id}) }}">modyfikuj</a>
                    
