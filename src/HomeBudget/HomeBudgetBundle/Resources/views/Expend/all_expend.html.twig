                <td>{{expend.description}}</td>
                <td>{{expend.expendCategory.name}}</td>
                <td>{{expend.amount}}</td>
                <td>{{ expend.expendDate|date("d/m/Y")}}</td>
                <td>{{expend.account.name}}</td>
