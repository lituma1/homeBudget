    <table>
        <th></th>
        <th>Nazwa</th>
        <th>Saldo</th>
        <th>Cel</th>
        <th>Typ</th>


        {% for account in accounts %}
            <tr>
                <td>
                    <a href="{{ path('submit_delete', {"id" : account.id}) }}">usuń</a>
                    <a href="{{ path('modify_Account', {"id" : account.id}) }}">modyfikuj</a>
