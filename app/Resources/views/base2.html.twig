<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Budżet domowy{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet"
                  href="{{ asset('bundles/hb/css/style.css')}}"/>
            <link rel="stylesheet"
                  href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet"
                  href="{{ asset('assets/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}"/>   
        {% endblock %}


    </head>
    <body>

        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('Panel')}}">Budżet domowy</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Konta <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('show_allAccounts')}}">Pokaż konta</a></li>
                                <li><a href="{{path('new_Account')}}">Dodaj konto</a></li>
                                <li><a href="{{path('new_type')}}">Zdefiniuj lub modyfikuj typ konta</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Wydatki <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{path('show_allExpends')}}">Pokaż wydatki</a></li>
                                <li><a href="{{path('new_expend')}}">Dodaj wydatek</a></li>
                                <li><a href="{{path('new_exCategory')}}">Zdefiniuj lub modyfikuj kategorię wydatku</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Przychody <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{path('show_allIncomes')}}">Pokaż przychody</a></li>
                                <li><a href="{{path('new_income')}}">Dodaj przychód</a></li>
                                <li><a href="{{path('new_inCategory')}}">Zdefiniuj lub modyfikuj kategorię przychodu</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('Panel')}}">Strona główna</a></li>
                        <li><a href="#contact">Kontakt</a></li>
                        <li><a href="{{path('fos_user_profile_edit')}}">Edytuj dane</a></li>
                        <li class="active"><a href="{{path('fos_user_security_logout')}}">Wyloguj <span class="sr-only">(current)</span></a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>


    </div> <!-- /container -->
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>


    {% block javascripts %}

        <script src="{{asset('assets/vendor/jquery/dist/jquery.min.js')}}"></script>
        <script src="{{asset('assets/vendor/moment/min/moment.min.js')}}"></script>
        <script src="{{asset('assets/vendor/bootstrap/js/collapse.js')}}"></script>
        <script src="{{asset('assets/vendor/bootstrap/js/transition.js')}}"></script>
        <script src="{{asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js')}}"></script>
        <script src="{{asset('assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js')}}"></script>

    {% endblock %}

</body>
</html>
