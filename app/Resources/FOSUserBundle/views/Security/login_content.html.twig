{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
<h2>Proszę się zalogować</h2>

<form action="{{ path("fos_user_security_check") }}" method="post">

    {% if csrf_token %}
        <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <label for="username">Podaj login lub email:
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </label>
    </div>
    <div class="form-group">
        <label for="password">Wprowadź hasło:
            <input class="form-control" type="password" id="password" name="_password" required="required" />  
        </label>
    </div>
     
    <div class="checkbox">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Zapamiętaj mnie
       </label>   
    </div>
      
    <button type="submit" class="btn btn-default" id="_submit" name="_submit">Zaloguj</button>
</form>
</div>
